{
  "compilerOptions": {
    "target": "ES2021",                                
    "module": "ES2022",                                
    "moduleResolution": "node",                       
    "types": ["bun-types"],                                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,         
    "outDir": "dist",
    "rootDir": "src",                             
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true                             
  }
}
